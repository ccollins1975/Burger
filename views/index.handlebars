<h1>Burgers!</h1>

<h2>Burgers to be Devoured</h2>

  <ul>
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
      {{/unless}}
    {{/each}}
  </ul>


<h2>Eaten Burgers</h2>
  <ul>
    {{#each burgers}}
      {{#if devoured}}
        <li>{{burger_name}}</li>
      {{/if}}
    {{/each}}
  </ul>



<h2>Add Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger N ame:</label>
    <input type="text" id="burgerName" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
